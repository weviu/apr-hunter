{
  "name": "apr-finder",
  "version": "1.0.0",
  "description": "APR Hunter - Crypto Investment Platform",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -k -n frontend,worker -c green,magenta \"pnpm --filter apr-finder-frontend dev\" \"pnpm -C frontend run worker\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "pnpm --filter apr-finder-frontend build",
    "start": "pnpm --filter apr-finder-frontend start",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "mongodb": "^7.0.0"
  }
}
